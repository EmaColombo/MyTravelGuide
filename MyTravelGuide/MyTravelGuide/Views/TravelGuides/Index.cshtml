@model ViewModels.TravelGuidesViewModelList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    

@foreach (var item in Model.List) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TravelGuideName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TravelGuideId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TravelGuideId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TravelGuideId })
        </td>
    </tr>
}

</table>
